# Embedding provider
# Options: ollama | huggingface | openai
EMBEDDINGS_PROVIDER=huggingface

# Ollama configuration (used when EMBEDDINGS_PROVIDER=ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Hugging Face local/offline configuration (used when EMBEDDINGS_PROVIDER=huggingface)
# Point to a local model directory mounted at /app/models
HF_EMBEDDING_MODEL=/app/models/bge-small-en-v1.5
HF_EMBEDDING_DEVICE=cpu
HF_CACHE_DIR=/app/models/cache
TRANSFORMERS_OFFLINE=1
HF_HUB_OFFLINE=1

# OpenAI configuration (optional)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=

# Gemini configuration
# For Google AI SDK (direct): set GEMINI_API_KEY
GEMINI_API_KEY=

# For Vertex AI (optional):
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# Streamlit
STREAMLIT_SERVER_HEADLESS=true

