# SQL RAG Application - Development Environment Configuration
# This file contains development-optimized settings for local development

# ===== DEPLOYMENT ENVIRONMENT =====
ENVIRONMENT=development

# ===== EMBEDDING CONFIGURATION =====
# Use OpenAI by default (recommended), or switch to Ollama for local development
EMBEDDINGS_PROVIDER=openai

# OpenAI configuration (primary option)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=sk-your-openai-api-key-here

# Ollama configuration (alternative for local development)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
# No API key needed for Ollama

# Google Gemini API key (required for chat functionality)
GEMINI_API_KEY=your-gemini-api-key-here

# ===== STREAMLIT CONFIGURATION =====
# Development Streamlit settings
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# ===== PYTHON CONFIGURATION =====
# Development Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=0  # Allow bytecode for faster development iteration

# ===== LOGGING CONFIGURATION =====
# Verbose logging for development
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# ===== PERFORMANCE CONFIGURATION =====
# Development performance settings (less restrictive)
FAISS_ALLOW_DANGEROUS_DESERIALIZATION=true
VECTOR_STORE_BATCH_SIZE=50  # Smaller batches for development
MAX_CONCURRENT_REQUESTS=10

# ===== CACHE CONFIGURATION =====
# Development caching (more permissive)
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=1800  # 30 minutes for development
MAX_CACHE_SIZE_MB=500   # Allow more cache for development

# ===== SECURITY CONFIGURATION =====
# Development security (less restrictive for testing)
DISABLE_FILE_UPLOAD=false
ENABLE_API_KEY_VALIDATION=false
MAX_REQUEST_SIZE_MB=50

# ===== MONITORING CONFIGURATION =====
# Development monitoring
ENABLE_HEALTH_CHECK=false
HEALTH_CHECK_PATH=/_stcore/health
METRICS_ENABLED=false

# ===== RESOURCE LIMITS =====
# Development resource limits (generous for local machine)
MAX_MEMORY_USAGE_MB=4000
MAX_CPU_CORES=4
REQUEST_TIMEOUT_SECONDS=600  # Longer timeout for development
MAX_EMBEDDING_BATCH_SIZE=200

# ===== DEVELOPMENT SPECIFIC =====
# Development-only settings
ENABLE_DEBUG_MODE=true
ENABLE_AUTO_RELOAD=true
ENABLE_VERBOSE_ERRORS=true
ENABLE_TIMING_DEBUG=true

# ===== FEATURE FLAGS =====
# Development feature configuration (all enabled for testing)
ENABLE_ANALYTICS_CACHE=true
ENABLE_HYBRID_SEARCH=true
ENABLE_QUERY_REWRITING=true
ENABLE_SCHEMA_INJECTION=true
ENABLE_CHAT_INTERFACE=true
ENABLE_CATALOG_PAGE=true

# ===== DATA CONFIGURATION =====
# Development data settings
DEFAULT_CSV_FILE=sample_queries_with_metadata.csv
DEFAULT_SCHEMA_FILE=sample_queries_metadata_schema.csv
ENABLE_DATA_VALIDATION=true
MAX_QUERIES_PER_BATCH=100  # Smaller batches for development testing

# ===== DEVELOPMENT TOOLS =====
# Tools and utilities for development
ENABLE_PROFILING=false
ENABLE_MEMORY_MONITORING=false
ENABLE_QUERY_TIMING=true
ENABLE_EMBEDDING_CACHE_DEBUG=true

# ===== OLLAMA SPECIFIC (if using Ollama provider) =====
# Ollama service configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_REQUEST_TIMEOUT=60
OLLAMA_NUM_PREDICT=512

# ===== FALLBACK CONFIGURATION =====
# Development fallback settings
ENABLE_GRACEFUL_DEGRADATION=true
FALLBACK_TO_BASIC_SEARCH=true
ENABLE_OFFLINE_MODE=true  # Allow offline development

# ===== LOCAL PATHS =====
# Local development paths
DATA_DIR=./data
CACHE_DIR=./cache
LOGS_DIR=./logs
TEMP_DIR=./temp