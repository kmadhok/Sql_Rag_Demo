# SQL RAG Application environment template
# Copy this file to `.env` and update the values with your credentials.

# --- Gemini / Google GenAI ---
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_API_KEY=optional-backup-api-key
GENAI_CLIENT_MODE=api  # options: api, sdk

# --- Google Cloud project configuration ---
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=global
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# --- Embeddings provider configuration ---
# Leave GOOGLE_GENAI_USE_VERTEXAI unset to follow GENAI_CLIENT_MODE defaults.
# Explicitly set it to true/false if you need to override the embedding path.
EMBEDDINGS_PROVIDER=gemini
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# --- Retrieval pipeline defaults ---
VECTOR_STORE_NAME=index_sample_queries_with_metadata_recovered
FAISS_SAFE_DESERIALIZATION=0

# --- BigQuery execution defaults ---
BIGQUERY_PROJECT_ID=your-bigquery-project
BIGQUERY_DATASET=bigquery-public-data.thelook_ecommerce
BIGQUERY_LOCATION=US

# --- Optional tuning flags ---
LLM_CHAT_MODEL=gemini-2.5-flash
LLM_PARSE_MODEL=gemini-2.5-flash-lite
ENABLE_SQL_VALIDATION=True

# Frontend: create frontend/.env.local with VITE_API_BASE_URL if the backend is not on localhost:8080
